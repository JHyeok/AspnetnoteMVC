@model AspnetNote.MVC6.Models.User
<h2> 로그인 </h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="form-group">
        <label>아이디</label>
        <input type="text" class="form-control" asp-for="UserId" />
        <span class="warning" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>비밀번호</label>
        <input type="password" class="form-control" asp-for="UserPassword" />
        <span class="warning" asp-validation-for="UserPassword"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">로그인</button>
        <a class="btn btn-warning" href="#">취소</a>
    </div>
</form>